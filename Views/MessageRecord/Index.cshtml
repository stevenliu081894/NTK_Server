@using NTKServer.ViewModels.MessageRecord;
@using NTKServer.Business;
@model MessageRecordVm
@{
    var Filter = (MessageRecordFilter)@Model.filter;
	var lang = ViewBag.Lang;
}

<div class="card">
    <form asp-action="Index">
        <div class="card-body row">
			<div class="col-auto">
				<label class="control-label">@lang["pk"]</label>
				<input asp-for="@Filter.pk" class="form-control" />
			</div>
			<div class="col-auto">
				<label class="control-label">@lang["nickname"]</label>
				<input asp-for="@Filter.nickname" class="form-control" />
			</div>
			<div class="col-auto">
				<label class="control-label">@lang["title"]</label>
				<input asp-for="@Filter.title" class="form-control" />
			</div>
			<div class="col-auto">
				<label class="control-label">@lang["account"]</label>
				<input asp-for="@Filter.account" class="form-control" />
			</div>

        </div>
        <div class="card-footer">
            <div class="form-group pull-right">
                <input type="submit" value="@lang["public:search"]" class="btn btn-primary pull-right" />
            </div>
        </div>
    </form>
</div>

<div class="">
    <table class="table">
        <thead>
            <tr>
				<th></th>
				<th>@lang["pk"]</th>
				<th>@lang["nickname"]</th>
				<th>@lang["title"]</th>
				<th>@lang["account"]</th>
				<th>@lang["sent_time"]</th>
				<th>@lang["read_time"]</th>

                <th>@lang["public:option"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.list)
            {
                <tr>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn icon btn-primary dropdown-toggle hide-arrow show" data-bs-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-bars"></i>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @Html.ActionLink((string)@lang["public:detail"], "Detail", new { pk = item.pk }, new { @class = "dropdown-item" })
                                @Html.ActionLink((string)@lang["reply"], "Create", new { member = MessageRecordBiz.Get(item.pk).sender_fk }, new { @class = "dropdown-item" })
                                @{
                                    string del = "return confirm('" + (string)@lang["public:confirm_delete"] + "')";
                                }
                                @Html.ActionLink((string)@lang["public:delete"], "Delete", new { pk = item.pk }, new { @class = "dropdown-item", onclick = @del })
                            </div>
                        </div>
                    </td>
				<td>@Html.DisplayFor(modelItem => item.pk)</td>
				<td>@Html.DisplayFor(modelItem => item.nickname)</td>
				<td>@Html.DisplayFor(modelItem => item.title)</td>
				<td>@Html.DisplayFor(modelItem => item.account)</td>
				<td>@Html.DisplayFor(modelItem => item.sent_time)</td>
				<td>@Html.DisplayFor(modelItem => item.read_time)</td>

                    <td>
							@Html.ActionLink((string)@lang["public:detail"], "Detail", new { pk = item.pk }, new { @class = "btn btn-primary" })
							@Html.ActionLink((string)@lang["public:delete"], "Delete", new { pk = item.pk }, new { @class = "btn btn-secondary", onclick = "return confirm('@lang[\"public:confirm_delete\"]');"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- 分頁處理 -->
<div class="card-footer px-3 border-0 d-flex flex-column flex-lg-row align-items-center justify-content-between">

    @if (Model != null)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">

                @Html.PagedListPager((IPagedList)Model.list, page => Url.Action("Index", new {Model.filter, page}),
            new X.PagedList.Web.Common.PagedListRenderOptions()
            {
				LiElementClasses = new string[] { "page-item" },
				PageClasses = new string[] { "page-link" },
				LinkToFirstPageFormat ="<<",
				LinkToPreviousPageFormat = "<",
				LinkToNextPageFormat = ">",
				LinkToLastPageFormat = ">>",

				MaximumPageNumbersToDisplay = 8
            })
            </ul>
        </nav>
    }

    <div class="fw-normal small mt-4 mt-lg-0">@lang["public:total_count"]: @Model.list.TotalItemCount </div>
</div>