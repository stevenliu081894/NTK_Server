@model Models.Dto.WalletPaymentDto
@{
    var lang = ViewBag.Lang;
}

<h4>@lang["public:title_create"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostCreate">
			<div class="form-group">
				<label class="control-label">@lang["pk"]</label>
				<span asp-validation-for="pk" class="text-danger"></span>
			</div>
			<div class="form-group">
			<label class="form-check-label">
			<input class="form-check-input" asp-for="status" /> @lang["status"]
			</label>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_name"]</label>
				<input asp-for="pay_name" class="form-control" />
				<span asp-validation-for="pay_name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_code"]</label>
				<input asp-for="pay_code" class="form-control" />
				<span asp-validation-for="pay_code" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_type"]</label>
				<input asp-for="pay_type" class="form-control" />
				<span asp-validation-for="pay_type" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_url"]</label>
				<input asp-for="pay_url" class="form-control" />
				<span asp-validation-for="pay_url" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_account"]</label>
				<input asp-for="pay_account" class="form-control" />
				<span asp-validation-for="pay_account" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_tokenkey"]</label>
				<input asp-for="pay_tokenkey" class="form-control" />
				<span asp-validation-for="pay_tokenkey" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_Notice_url"]</label>
				<input asp-for="pay_Notice_url" class="form-control" />
				<span asp-validation-for="pay_Notice_url" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_Return_url"]</label>
				<input asp-for="pay_Return_url" class="form-control" />
				<span asp-validation-for="pay_Return_url" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["pay_sort"]</label>
				<input asp-for="pay_sort" class="form-control" />
				<span asp-validation-for="pay_sort" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["create_time"]</label>
				<input asp-for="create_time" class="form-control" />
				<span asp-validation-for="create_time" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["notes"]</label>
				<input asp-for="notes" class="form-control" />
				<span asp-validation-for="notes" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["viplists"]</label>
				<input asp-for="viplists" class="form-control" />
				<span asp-validation-for="viplists" class="text-danger"></span>
			</div>

            <div class="form-group">
                <input type="submit" value="@lang["public:save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@lang["public:back_list"]</a>
</div>
