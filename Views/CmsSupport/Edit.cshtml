@model Models.Dto.CmsSupportDto
@{
    var lang = ViewBag.Lang;
}

<h4>@lang["public:title_edit"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostEdit">
			<div class="form-group">
				<label class="control-label">@lang["pk"]</label>
				<input asp-for="pk" readonly class="form-control" />
				<span asp-validation-for="pk" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["lang"]</label>
				<select asp-for="lang" asp-items="@(new SelectList(ViewBag.langDropdown, nameof(SelectListItem.Value), nameof(SelectListItem.Text)))" class="form-select">
				</select>
				<span asp-validation-for="lang" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["svc_phone"]</label>
				<input asp-for="svc_phone" class="form-control" />
				<span asp-validation-for="svc_phone" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["svc_workday"]</label>
				<input asp-for="svc_workday" class="form-control" />
				<span asp-validation-for="svc_workday" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["svc_nonworkday"]</label>
				<input asp-for="svc_nonworkday" class="form-control" />
				<span asp-validation-for="svc_nonworkday" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["svc_email"]</label>
				<input asp-for="svc_email" class="form-control" />
				<span asp-validation-for="svc_email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">@lang["svc_link"]</label>
				<input asp-for="svc_link" class="form-control" />
				<span asp-validation-for="svc_link" class="text-danger"></span>
			</div>

            <div class="form-group">
                <input type="submit" value="@lang["public:save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@lang["public:back_list"]</a>
</div>

