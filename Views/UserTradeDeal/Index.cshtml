@using NTKServer.ViewModels.UserTradeDeal;
@model UserTradeDealVm
@{
    var Filter = (UserTradeDealFilter)@Model.filter;
	var lang = ViewBag.Lang;
}

<div class="card">
    <form asp-action="Index">
        <div class="card-body row">
			<div class="col-auto">
				<label class="control-label">@lang["deal_id"]</label>
				<input asp-for="@Filter.deal_id" class="form-control" />
			</div>
			<div class="col-auto">
				<label class="control-label">@lang["trade_order_sn"]</label>
				<input asp-for="@Filter.trade_order_sn" class="form-control" />
			</div>
			<div class="col-auto">
				<label class="control-label">@lang["stock_code"]</label>
				<input asp-for="@Filter.stock_code" class="form-control" />
			</div>
			<div class="col-auto">
				<label class="control-label">@lang["stock_name"]</label>
				<input asp-for="@Filter.stock_name" class="form-control" />
			</div>

        </div>
        <div class="card-footer">
            <div class="form-group pull-right">
                <input type="submit" value="@lang["public:search"]" class="btn btn-primary pull-right" />
            </div>
        </div>
    </form>
</div>

<a href="~/TradingAccount/Index" class="btn btn-primary">@lang["public:back_list"]</a>
<div class="scoll_table">
    <table class="table">
        <thead>
            <tr>
                <th>@lang["public:option"]</th>
				<th>@lang["pk"]</th>
				<th>@lang["sub_account"]</th>
				<th>@lang["deal_id"]</th>
				<th>@lang["trade_order_sn"]</th>
				<th>@lang["stock_code"]</th>
				<th>@lang["stock_name"]</th>
				<th>@lang["order_type"]</th>
				<th>@lang["dir"]</th>
				<th>@lang["final_price"]</th>
				<th>@lang["final_volume"]</th>
				<th>@lang["create_datetime"]</th>
				<th>@lang["total_pay"]</th>
				<th>@lang["total_cost"]</th>
				
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.list)
            {
                <tr>
                    <td>
                    <div class="dropdown">
                        <button type="button" class="btn icon btn-primary dropdown-toggle hide-arrow show" data-bs-toggle="dropdown" aria-expanded="true">
                            <i class="fa fa-bars"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                        </div>
                    </div>
                    </td>
				<td>@Html.DisplayFor(modelItem => item.pk)</td>
				<td>@Html.DisplayFor(modelItem => item.sub_account)</td>
				<td>@Html.DisplayFor(modelItem => item.deal_id)</td>
				<td>@Html.DisplayFor(modelItem => item.trade_order_sn)</td>
				<td>@Html.DisplayFor(modelItem => item.stock_code)</td>
				<td>@Html.DisplayFor(modelItem => item.stock_name)</td>
				<td>@Html.DisplayFor(modelItem => item.order_type)</td>
				<td>@Html.DisplayFor(modelItem => item.dir)</td>
				<td>@Html.DisplayFor(modelItem => item.final_price)</td>
				<td>@Html.DisplayFor(modelItem => item.final_volume)</td>
				<td>@Html.DisplayFor(modelItem => item.create_datetime)</td>
				<td>@Html.DisplayFor(modelItem => item.total_pay)</td>
				<td>@Html.DisplayFor(modelItem => item.total_cost)</td>
					
                </tr>
            }
        </tbody>
    </table>
</div>

