@using NTKServer.ViewModels.SysMarket;
@model List<SysMarketList>
@{  
	var lang = ViewBag.Lang;
}

@Html.ActionLink((string)@lang["public:append"], "Create", new {}, new { @class = "btn btn-primary"})
<div class="scoll_table">
    <table class="table">
        <thead>
            <tr>
                <th>@lang["public:option"]</th>			
				<th>@lang["code"]</th>
				<th>@lang["currency"]</th>
				<th>@lang["enable"]</th>
				<th>@lang["name"]</th>
				<th>@lang["sort"]</th>
				<th>@lang["buy_fee"]</th>
				<th>@lang["sell_fee"]</th>
				<th>@lang["min_buy_fee"]</th>
				<th>@lang["min_sell_fee"]</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                    <div class="dropdown">
                        <button type="button" class="btn icon btn-primary dropdown-toggle hide-arrow show" data-bs-toggle="dropdown" aria-expanded="true">
                            <i class="fa fa-bars"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							@Html.ActionLink((string)@lang["public:edit"], "Edit", new { code = item.code }, new { @class = "dropdown-item" })

                        </div>
                    </div>
                    </td>
				<td>@Html.DisplayFor(modelItem => item.code)</td>
				<td>@Html.DisplayFor(modelItem => item.currency)</td>
				<td>@Html.DisplayFor(modelItem => item.enable)</td>
				<td>@Html.DisplayFor(modelItem => item.name)</td>
				<td>@Html.DisplayFor(modelItem => item.sort)</td>
				<td>@Html.DisplayFor(modelItem => item.buy_fee)</td>
				<td>@Html.DisplayFor(modelItem => item.sell_fee)</td>
				<td>@Html.DisplayFor(modelItem => item.min_buy_fee)</td>
				<td>@Html.DisplayFor(modelItem => item.min_sell_fee)</td>

                </tr>
            }
        </tbody>
    </table>
</div>
